{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "reload": true
  },
  "launcher": {
    "startup_timeout_sec": 5.0,
    "open_browser": true
  },
  "data": {
    "root": "./data",
    "allow_abs_paths": true,
    "scan_cache_sec": 2.0,
    "max_scan_depth": -1,
    "max_upload_mb": 0
  },
  "logging": {
    "level": "INFO",
    "dir": "./logs"
  },
  "ui": {
    "tool_hints": true,
    "pixel_label_min_cell_px": 25,
    "pixel_label_max_labels": 1000,
    "pixel_label_format": "auto",
    "pixel_label_show_during_drag": false
  }
}
